{
  "name": "@funbox/markdown-lint",
  "version": "0.1.0",
  "description": "Markdown code style linter.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --cache --ext .js ./",
    "postcommit": "git update-index --again",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@git.funbox.ru/fcs/markdown-lint.git"
  },
  "keywords": [
    "markdown",
    "linter"
  ],
  "devDependencies": {
    "@funbox/eslint-config": "4.8.0",
    "eslint": "5.6.1",
    "husky": "1.1.1",
    "lint-staged": "7.3.0"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix --cache",
        "git add"
      ]
    },
    "renderer": "silent"
  }
}
